# CLI Environment Configuration Template

# Encryption Configuration
ENCRYPTION_ALGORITHM=aes-256-gcm
KEY_DERIVATION_ALGORITHM=pbkdf2
PBKDF2_ITERATIONS=100000
PBKDF2_SALT_LENGTH=16

# SFTP Configuration
SFTP_HOST=
SFTP_PORT=22
SFTP_USERNAME=
SFTP_PRIVATE_KEY_PATH=
SFTP_UPLOAD_DIR=/uploads

# Logging
LOG_LEVEL=info

# API Configuration (for metadata registration)
API_BASE_URL=http://localhost:3000
API_TIMEOUT=30000

# File Handling
INPUT_FILE_FORMATS=csv,json
MAX_FILE_SIZE=104857600
CHUNK_SIZE=1048576

# Output Configuration
OUTPUT_DIRECTORY=./encrypted-output
PRESERVE_ORIGINAL=false
