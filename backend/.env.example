# Backend Environment Configuration Template
# Copy this file to .env and fill in actual values

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/secure_encryption_db
MONGODB_USER=
MONGODB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRY=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRY=7d

# Encryption Configuration
ENCRYPTION_ALGORITHM=aes-256-gcm
KEY_DERIVATION_ALGORITHM=pbkdf2
PBKDF2_ITERATIONS=100000
PBKDF2_SALT_LENGTH=16

# KMS Configuration (AWS or GCP)
KMS_PROVIDER=aws
AWS_KMS_KEY_ID=
AWS_REGION=us-east-1
GCP_PROJECT_ID=
GCP_KMS_KEY_RING=
GCP_KMS_CRYPTO_KEY=

# Secrets Management (Vault)
VAULT_ADDR=
VAULT_TOKEN=

# SFTP Configuration
SFTP_HOST=
SFTP_PORT=22
SFTP_USERNAME=
SFTP_PRIVATE_KEY_PATH=
SFTP_UPLOAD_DIR=/uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring & Observability
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600000

# Email Configuration (for notifications)
EMAIL_SERVICE=
EMAIL_FROM=
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USER=
EMAIL_PASSWORD=
